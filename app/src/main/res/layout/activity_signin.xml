<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_in_back"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="go"
        />
    <TextView
        android:id="@+id/account"
        android:text="@string/account"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/repwd"
        app:layout_constraintEnd_toEndOf="@id/repwd"
        app:layout_constraintVertical_bias="0.18"
        />
    <TextView
        android:id="@+id/pwd"
        android:text="@string/pwd"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/repwd"
        app:layout_constraintEnd_toEndOf="@id/repwd"
        app:layout_constraintVertical_bias="0.25"
        />
    <TextView
        android:id="@+id/repwd"
        android:text="@string/repwd"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.32"
        app:layout_constraintHorizontal_bias="0.05"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:hint="@string/hint_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="-10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/account"
        app:layout_constraintStart_toEndOf="@+id/account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/account"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.65"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#044F9E"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:hint="@string/hint_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="-10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/pwd"
        app:layout_constraintStart_toEndOf="@+id/pwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/pwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.65"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#044F9E"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:hint="@string/hint_repwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="-10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/repwd"
        app:layout_constraintStart_toEndOf="@+id/repwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/repwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.65"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#044F9E"
        />
    <Button
        android:id="@+id/btn_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/login_button"
        android:textSize="20sp"
        android:enabled="false"
        android:textColor="@color/white"
        android:background="@drawable/button_login"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.42"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.06"
        />
</androidx.constraintlayout.widget.ConstraintLayout>